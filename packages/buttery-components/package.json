{
  "name": "@buttery/components",
  "version": "0.0.0",
  "description": "A collection of components designed to make creating interfaces buttery smooth",
  "author": "Drew DeCarme (drewdecarme@gmail.com)",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./css": {
      "types": "./dist/index.d.ts",
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "test": "test",
    "build": "yarn build:lib && yarn build:docs",
    "build:lib": "vite build && yarn tsc --project tsconfig.types.json",
    "build:docs": "yarn buttery docs build",
    "deploy:docs": "cd ./.buttery/docs/dist && wrangler pages deploy ./build/client --project-name buttery-tools-components-docs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "upgrade-storybook": "npx storybook@next upgrade --prerelease"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-react": "7.24.7",
    "@babel/preset-typescript": "7.24.7",
    "@buttery/docs": "workspace:^",
    "@buttery/icons": "workspace:^",
    "@chromatic-com/storybook": "2.0.0",
    "@linaria/core": "6.2.0",
    "@ngneat/falso": "7.2.0",
    "@storybook/addon-a11y": "8.2.9",
    "@storybook/addon-essentials": "8.2.9",
    "@storybook/addon-interactions": "8.2.9",
    "@storybook/addon-links": "8.2.9",
    "@storybook/blocks": "8.2.9",
    "@storybook/react": "8.2.9",
    "@storybook/react-vite": "8.2.9",
    "@storybook/test": "8.2.9",
    "@wyw-in-js/vite": "0.5.4",
    "glob": "11.0.0",
    "storybook": "8.2.9",
    "tsx": "4.19.0",
    "typescript": "5.6.2",
    "vite": "5.4.3"
  }
}
