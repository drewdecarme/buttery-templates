{
  "name": "@buttery/docs",
  "version": "0.0.1",
  "description": "A CLI to generate the assets needed to render the Buttery Docs template in any Remix application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "yarn tokens:dev & yarn lib:dev & yarn cli:dev",
    "build": "yarn tokens:build & yarn cli:build && yarn lib:build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tokens:build": "yarn buttery-tokens build",
    "tokens:dev": "yarn tokens:build --watch",
    "lib:build": "yarn vite build && yarn tsc --project ./tsconfig.build.json",
    "lib:dev": "yarn storybook:dev",
    "cli:build": "yarn buttery cli build",
    "cli:dev": "yarn buttery cli dev"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/drewdecarme/buttery-tools.git"
  },
  "exports": {
    "./types": {
      "default": "./dist/types/index.js",
      "import": "./dist/types/index.js",
      "node": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./remix/cloudflare": {
      "default": "./dist/remix/cloudflare/index.js",
      "import": "./dist/remix/cloudflare/index.js",
      "node": "./dist/remix/cloudflare/index.js",
      "require": "./dist/remix/cloudflare/index.js",
      "types": "./dist/remix/cloudflare/index.d.ts"
    },
    "./css": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/style.css",
      "import": "./dist/style.css",
      "node": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "author": "Drew DeCarme (drewdecarme@gmail.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/drewdecarme/buttery-tools/issues"
  },
  "homepage": "https://github.com/drewdecarme/buttery-tools#readme",
  "devDependencies": {
    "@buttery/tsconfig": "workspace:^",
    "@chromatic-com/storybook": "^1.4.0",
    "@storybook/addon-essentials": "^8.1.1",
    "@storybook/addon-interactions": "^8.1.1",
    "@storybook/addon-links": "^8.1.1",
    "@storybook/addon-onboarding": "^8.1.1",
    "@storybook/blocks": "^8.1.1",
    "@storybook/react": "^8.1.1",
    "@storybook/react-vite": "^8.1.1",
    "@storybook/test": "^8.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash.get": "^4",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@wyw-in-js/vite": "^0.5.3",
    "fs-extra": "^11.2.0",
    "remix": "^2.9.2",
    "storybook": "^8.1.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "bin": {
    "buttery-docs": "bin/index.js"
  },
  "dependencies": {
    "@buttery/cli": "workspace:^",
    "@buttery/core": "workspace:^",
    "@buttery/logger": "workspace:^",
    "@buttery/tokens": "workspace:^",
    "@inquirer/prompts": "^5.0.4",
    "@linaria/core": "^6.2.0",
    "@linaria/react": "^6.2.1",
    "@mdx-js/mdx": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@remix-run/cloudflare": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@wyw-in-js/babel-preset": "^0.5.3",
    "gray-matter": "^4.0.3",
    "lodash.get": "^4.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
