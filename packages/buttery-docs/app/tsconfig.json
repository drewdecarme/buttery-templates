{
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/.server/**/*.ts",
    "./**/.server/**/*.tsx",
    "./**/.client/**/*.ts",
    "./**/.client/**/*.tsx",
    "./types/**/*.d.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"]
  }
}
