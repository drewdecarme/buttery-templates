{
  "name": "@buttery/utils",
  "version": "0.0.1",
  "description": "A collection of commonly used utilities for different runtime's that are used throughout all @buttery packages. Intended to be used internally to the @buttery/tools monorepo as well as externally.",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "yarn build --watch",
    "build": "tsx ./scripts/build.ts && tsc --project tsconfig.build.json"
  },
  "exports": {
    "./node": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.js",
      "require": "./dist/node/index.js"
    },
    "./isomorphic": {
      "types": "./dist/isomorphic/index.d.ts",
      "import": "./dist/isomorphic/index.js",
      "require": "./dist/isomorphic/index.js"
    },
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/drewdecarme/buttery-tools.git",
    "directory": "packages/buttery-tools"
  },
  "author": "Drew DeCarme (drewdecarme@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drewdecarme/buttery-tools/issues"
  },
  "homepage": "https://github.com/drewdecarme/buttery-tools#readme",
  "dependencies": {
    "@buttery/builder": "workspace:^",
    "@buttery/tsconfig": "workspace:^",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "tsx": "^4.19.1"
  }
}
