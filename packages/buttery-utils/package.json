{
  "name": "@buttery/utils",
  "version": "0.0.0",
  "description": "Utilities that can be used to build, develop and deploy buttery based apps",
  "type": "module",
  "scripts": {
    "build": "yarn tsc",
    "dev": "yarn tsc --watch"
  },
  "exports": {
    "./vite": {
      "default": "./dist/vite/index.js",
      "import": "./dist/vite/index.js",
      "require": "./dist/vite/index.js",
      "node": "./dist/vite/index.js",
      "types": "./dist/vite/index.d.ts"
    },
    "./esbuild": {
      "default": "./dist/esbuild/index.js",
      "import": "./dist/esbuild/index.js",
      "require": "./dist/esbuild/index.js",
      "node": "./dist/esbuild/index.js",
      "types": "./dist/esbuild/index.d.ts"
    },
    "./ts": {
      "default": "./dist/ts/index.js",
      "import": "./dist/ts/index.js",
      "require": "./dist/ts/index.js",
      "node": "./dist/ts/index.js",
      "types": "./dist/ts/index.d.ts"
    },
    "./buttery/run-cli": {
      "default": "./dist/buttery/run-cli.js",
      "import": "./dist/buttery/run-cli.js",
      "require": "./dist/buttery/run-cli.js",
      "node": "./dist/buttery/run-cli.js",
      "types": "./dist/buttery/run-cli.d.ts"
    },
    "./node": {
      "default": "./dist/node/index.js",
      "import": "./dist/node/index.js",
      "require": "./dist/node/index.js",
      "node": "./dist/node/index.js",
      "types": "./dist/node/index.d.ts"
    },
    "./remix/cloudflare": {
      "default": "./dist/remix/cloudflare/index.js",
      "import": "./dist/remix/cloudflare/index.js",
      "require": "./dist/remix/cloudflare/index.js",
      "node": "./dist/remix/cloudflare/index.js",
      "types": "./dist/remix/cloudflare/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/drewdecarme/buttery-tools.git"
  },
  "author": "Drew DeCarme (drewdecarme@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drewdecarme/buttery-tools/issues"
  },
  "homepage": "https://github.com/drewdecarme/buttery-tools#readme",
  "devDependencies": {
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  },
  "dependencies": {
    "@buttery/logger": "workspace:^",
    "@buttery/tsconfig": "workspace:^",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "esbuild": "^0.21.5",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.2"
  }
}
