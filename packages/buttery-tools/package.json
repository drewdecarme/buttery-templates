    "rollup": "4.21.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-pattern": "5.3.1",
    "unified": "11.0.5",
    "unist-util-visit": "5.0.0",
    "vite": "5.4.4",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-inspect": "^0.8.7",
    "wrangler": "^3.78.7"
  },
  "bin": {
    "buttery": "./bin/index.js"
  }
}
