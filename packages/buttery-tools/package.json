{
  "name": "@buttery/tools",
  "version": "0.0.2",
  "description": "A file based CLI designed to making writing a CLI as easy as exporting a few functions in a file",
  "sideEffects": false,
  "type": "module",
  "author": "Drew DeCarme (drewdecarme@gmail.com)",
  "license": "MIT",
  "homepage": "https://github.com/drewdecarme/buttery-tools#readme",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "buttery": "./bin/index.js"
  },
  "scripts": {
    "build": "yarn cli:build && lib:build && yarn docs:build",
    "cli:dev": "tsx ./scripts/dev.ts",
    "cli:build": "tsx ./scripts/build.ts",
    "docs:build": "yarn buttery docs build",
    "docs:release": "yarn docs:build && cd ./.buttery/docs/dist && wrangler pages deploy ./build/client --project-name buttery-tools",
    "lib:build": "tsc --project tsconfig.library.json",
    "lib:dev": "yarn lib:build --watch"
  },
  "exports": {
    ".": "./dist/index.js",
    "./config": {
      "types": "./dist/config/index.public.d.ts",
      "import": "./dist/config/index.public.js",
      "require": "./dist/config/index.public.js"
    },
    "./commands": {
      "types": "./dist/commands/index.public.d.ts",
      "import": "./dist/commands/index.public.js",
      "require": "./dist/commands/index.public.js"
    },
    "./docs": {
      "types": "./dist/docs/index.public.d.ts",
      "node": "./dist/docs/index.public.js",
      "import": "./dist/docs/index.public.js"
    },
    "./docs/css": {
      "types": "./dist/buttery-docs.d.ts",
      "node": "./dist/buttery-docs.css",
      "import": "./dist/buttery-docs.css",
      "css": "./dist/buttery-docs.css"
    },
    "./docs/vite": {
      "types": "./dist/docs/build-utils/vite-plugin/index.d.ts",
      "node": "./dist/docs/build-utils/vite-plugin/index.js",
      "import": "./dist/docs/build-utils/vite-plugin/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "artifacts"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/drewdecarme/buttery-tools.git"
  },
  "bugs": {
    "url": "https://github.com/drewdecarme/buttery-tools/issues"
  },
  "devDependencies": {
    "@buttery/tsconfig": "workspace:",
    "tsx": "4.19.1",
    "typescript": "5.6.2"
  },
  "dependencies": {
    "@buttery/commands": "workspace:^",
    "@buttery/components": "workspace:^",
    "@buttery/docs": "workspace:^",
    "@buttery/icons": "workspace:^",
    "@buttery/logger": "workspace:",
    "@buttery/meta": "workspace:^",
    "@buttery/tools": "^0.0.2"
  }
}
