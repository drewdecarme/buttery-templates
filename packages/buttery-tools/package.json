    "@wyw-in-js/vite": "0.5.4",
    "body-parser": "1.20.3",
    "chokidar": "3.6.0",
    "chroma-js": "^3.1.1",
    "clsx": "2.1.1",
    "commander": "12.1.0",
    "cosmiconfig": "9.0.0",
    "express": "4.20.0",
    "fs-extra": "^11.2.0",
    "gray-matter": "4.0.3",
    "handlebars": "4.7.8",
    "install": "0.13.0",
    "isbot": "^5.1.17",
    "react": "18.3.1",
