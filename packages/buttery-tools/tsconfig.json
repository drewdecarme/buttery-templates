{
  "extends": "@buttery/tsconfig/library",
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.d.ts",
    "./.buttery/**/*.ts",
    "./.buttery/**/*.tsx",
    "./.buttery/.store/**/*.ts",
    "./.buttery/.store/**/*.tsx",
    "rollup.config.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@BUTTERY_COMPONENT/*": ["./lib/components/*"]
    }
  }
  // "exclude": ["artifacts/buttery-docs/apps/**/*"]
}
