{
  "extends": "@buttery/tsconfig/vite/react",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      // configuration ui tokens
      "#tokens/config-ui": ["./.buttery-tokens/config-ui/index"],
      "#tokens/config-ui/css": ["./.buttery-tokens/config-ui/index.css"],
      // docs ui tokens
      "#tokens/generated": ["./.buttery-tokens/generated/index"],
      "#tokens/generated/css": ["./.buttery-tokens/generated/index.css"]
    }
  },
  "include": [
    ".buttery/*",
    ".buttery-docs/**/*",
    ".buttery-tokens/**/*",
    ".storybook/*",
    "lib",
    "scripts"
  ]
}
