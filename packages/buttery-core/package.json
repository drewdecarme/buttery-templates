{
  "name": "@buttery/core",
  "version": "0.0.1",
  "description": "A core module that provides some core functionality for all buttery tools",
  "type": "module",
  "scripts": {
    "build": "yarn tsc",
    "dev": "yarn build --watch"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./defaults": {
      "default": "./dist/index.defaults.js",
      "import": "./dist/index.defaults.js",
      "node": "./dist/index.defaults.js",
      "require": "./dist/index.defaults.js",
      "types": "./dist/index.defaults.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/drewdecarme/buttery-tools.git"
  },
  "author": "Drew DeCarme (drewdecarme@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drewdecarme/buttery-tools/issues"
  },
  "homepage": "https://github.com/drewdecarme/buttery-tools#readme",
  "devDependencies": {
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "@buttery/logger": "workspace:^",
    "@buttery/tsconfig": "workspace:^",
    "esbuild": "^0.21.5"
  }
}
